<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pruebascongit.pau.tabs">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar">
            <!-- android:windowSoftInputMode="stateHidden" -->
            <!-- Retrieve url that afterwards will be filter to know if match with jpg, png, pdf ... -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:mimeType="image/*"/>
                <data android:mimeType="application/pdf"/>
                <data android:host="*" />
            </intent-filter>

            <!-- Retrieve pdf from local file system -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>


        <provider
            android:name=".ContentProvider.OcrContentProvider"
            android:authorities="com.pruebascongit.pau.tabs.provider"
            android:exported="false" />

    </application>

</manifest>